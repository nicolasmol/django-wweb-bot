{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start tsc watch",
      "options": {
        "cwd": "${workspaceFolder}/wab",
        

      },
      "type": "shell",
      "command": "pnpm watch",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "presentation": {
        "echo": false,
        "focus": false,
        "panel": "dedicated",
        "reveal": "never"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "owner": "typescript",
        "source": "tsc",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${workspaceFolder}/wab"
        ],
      }
    }
  ]
}
